<div class="main-titlebox-d" data-aos="flip-up">
  <img src="../images/BINH-Title_d1.jpg" alt="Nos desserts" width="300px">
</div>
<div class="container">
  <% data.desserts.each do |dessert| %>
  <div class="desserts-p">
    <a href="<%= dessert.img_link %>" data-lightbox="photo" data-title="<%= dessert.name %>"><img src="<%= dessert.img_link %>" alt="" class='desserts-image rounded'></a>
    <div class="desserts-description">
      <h4><%= dessert.name %></h4>
    </div>
     <div class="emporter">
      <%= dessert.emporter %>
    </div>
    <div class="desserts-prix">
      <h4><%= dessert.prix %></h4>
    </div>
  </div>
<% end %>
</div>
